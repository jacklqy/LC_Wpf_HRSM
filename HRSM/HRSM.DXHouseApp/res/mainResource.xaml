<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:local="clr-namespace:HRSM.DXHouseApp.res"
                    >
    <Style x:Key="mainWindowStyle" TargetType="{x:Type dx:ThemedWindow}">
        <Setter Property="MinHeight" Value="700"></Setter>
        <Setter Property="MinWidth" Value="1060"></Setter>
        <Setter Property="Icon" Value="../imgs/house.jpg"></Setter>
        <Setter Property="WindowState" Value="Maximized"></Setter>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"></Setter>
        <Setter Property="ShowStatusPanel" Value="False"/>
        <Setter Property="ResizeMode" Value="CanResize"></Setter>
    </Style>
    <Style TargetType="dx:SimpleButton" x:Key="mainBtnStyle">
        <Setter Property="Height" Value="25"></Setter>
        <Setter Property="FontFamily" Value="微软雅黑"></Setter>
        <Setter Property="Margin" Value="0,0,5,0"></Setter>
    </Style>
</ResourceDictionary>